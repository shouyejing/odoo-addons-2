<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<report id="sale_custom_qweb_pdf"
				string="Custom - Quotation"
				model="sale.order"
				report_type="qweb-pdf"
				file="sale_custom_pdf.sale_another_layout"
				name="sale_custom_pdf.sale_another_layout"
				usage="default"/>
		
		<record id="sale_custom_qweb_pdf" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="sale_custom_paperformat" />
		</record>


		<template id="sale_custom_pdf.sale_report_layout">
		<link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css' />
                    <style type="text/css">
                        <![CDATA[
                            body {
                                font-family: 'Droid Sans', Arial, sans-serif;
								position: relative;
								background: #FFFFFF; 
								font-size: 15px;
                            }
	.clearfix:after {
  content: "";
  display: table;
  clear: both;
}

.customer {
	border-left: 6px solid #6ED0F7;
  
}

  
.left {
	float: left;
	display: inline;
	text-align: right;
	background-color:#6ED0F7; 
	border-radius: 5px; 
	box-shadow: 0 3px 2px rgba(0,0,0,0.15) , 0 0 1px rgba(0,0,0,0.15); 
	border-right: 2px solid #FF0000;
	width: 100px;
	
	
	}
.right {
	float: left;
	background-color:#CAD2D5; 
	border-radius: 5px; 
	box-shadow: 0 3px 2px rgba(0,0,0,0.15) , 0 0 1px rgba(0,0,0,0.15);
	<!-- width: 200px; -->
	display: inline;
	
  }

<!-- table {
  width: 100%;
  border-collapse: collapse;
  border-spacing: 2px;
  margin-bottom: 10px;
} -->

<!--
table tr:nth-child(2n-1) td {
  background: #CAD2D5;
}
 -->

 table th{
  padding: 20px;
  border-radius:5px;
  background: #6ED0F7;
  box-shadow: 0 3px 2px rgba(0,0,0,0.15) , 0 0 1px rgba(0,0,0,0.15);
}


table td {
  padding: 10px;
  text-align: right;
  background: #CAD2D5;
  border-bottom: 2px solid white;
  box-shadow: 0 3px 2px rgba(0,0,0,0.15) , 0 0 1px rgba(0,0,0,0.15);
}

table th.text-left {
  border-right: 2px solid #CAD2D5;
  border-bottom: 2px solid white;
}

table th.text-center {
  border-right: 2px solid #CAD2D5;
  border-bottom: 2px solid white;
}
table th.text-right {
  border-right: 2px solid #CAD2D5;
  border-bottom: 2px solid white;
}
table th.text-righ {
  
  border-bottom: 2px solid white;
}


                        ]]>
</style>
			<!-- Multicompany -->
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"/>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"/>
			</t>

			<t t-call="sale_custom_pdf.sale_layout_header" />
			<t t-raw="0" />
			<t t-call="sale_custom_pdf.sale_layout_footer" />
		</template>

		<template id="sale_layout_header">
			<div class="header">
				<div class="row">
					<div class="col-xs-3">
						<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 35px;"/>
					</div>
					<div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
				</div>
				<div class="row zero_min_height">
					<div class="col-xs-12">
						<div style="border-bottom: 2px solid red;"/>
					</div>
				</div>
			</div>
		</template>

		<template id="sale_layout_footer">
			<div class="footer">
				<div class="text-center" style="border-top: 2px solid red;">
					<ul t-if="not company.custom_footer" class="list-inline">
						<li t-if="company.phone">Phone: <span t-field="company.phone"/></li>
						<li t-if="company.fax and company.phone">&amp;bull;</li>
						<li t-if="company.fax">Fax: <span t-field="company.fax"/></li>
						<li t-if="company.email">&amp;bull;</li>
						<li t-if="company.email">Email: <span t-field="company.email"/></li>
						<li t-if="company.website">&amp;bull;</li>
						<li t-if="company.website">Website: <span t-field="company.website"/></li>
					</ul>
					<span t-field="company.street"/>
					<span t-field="company.street2"/>
					<span t-field="company.city"/>
					<t t-if="company.custom_footer">
						<span t-raw="company.rml_footer"/>
					</t>
					<ul class="list-inline">
						<li>Page:</li>
						<li><span class="page"/></li>
						<li>/</li>
						<li><span class="topage"/></li>
					</ul>
				</div>
			</div>
		</template>

	</data>
</openerp>
